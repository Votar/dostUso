<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppThemeTransparent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="BlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorDarkBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:colorButtonNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
    </style>

    <style name="SecondaryButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorDarkBlue</item>
    </style>

    <style name="CardActivityDefault">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

</resources>

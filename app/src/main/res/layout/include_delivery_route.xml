<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable
            name="start"
            type="com.entrego.entregouser.entity.route.EntregoPointBinding" />
        <variable
            name="destination"
            type="com.entrego.entregouser.entity.route.EntregoPointBinding" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGrey"
        android:padding="@dimen/default_screen_padding"
        android:visibility="@{start != null? View.VISIBLE: View.GONE}">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/drawer_start_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/blue_dot" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/drawer_start_dot"
                    android:layout_centerInParent="true"
                    android:background="@color/secondary_text" />
            </RelativeLayout>

            <TextView
                android:text="@{start.address}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/default_screen_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/drawer_finish_dot"
                    android:layout_centerHorizontal="true"
                    android:background="@color/secondary_text" />

                <ImageView
                    android:id="@+id/drawer_finish_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/going_dot" />
            </RelativeLayout>

            <TextView
                android:text="@{destination.address}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/default_screen_padding" />
        </LinearLayout>

    </LinearLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/payment_method_bank_icon"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/payment_method_cell_height"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/item_card_icon"
            android:layout_width="30dp"
            android:layout_height="@dimen/payment_method_cell_height"
            app:srcCompat="@drawable/ic_payment_escort" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_card_masked_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/payment_method_bank_icon"
        android:paddingLeft="@dimen/padding_medium" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardActivityDefault"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_success_registration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.registration.SuccessRegistrationActivity">

            <include
                android:id="@+id/succ_reg_logo"
                layout="@layout/logo" />


            <TextView
                android:gravity="center"
                android:padding="@dimen/default_screen_padding"
                android:id="@+id/succ_reg_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ui_success_regist"
                android:textAlignment="center"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/tsize_medium" />


            <Button
                android:id="@+id/succ_reg_btn_login"
                style="@style/SecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/succ_reg_descr"
                android:layout_centerHorizontal="true"
                android:text="@string/back_to_auth" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
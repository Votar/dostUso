<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/account_user_pic_holder"
                    android:layout_width="@dimen/user_photo_holder_size"
                    android:layout_height="@dimen/user_photo_holder_size"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_large"
                    android:src="@drawable/logo_medium"
                    app:civ_border_width="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_medium"
                    tool:text="asd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_medium"
                    android:paddingLeft="@dimen/drawer_content_padding"
                    android:paddingRight="@dimen/drawer_content_padding">

                    <Button
                        android:id="@+id/drawer_share_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_share"
                        android:theme="@style/BlueButton" />

                    <Button
                        android:id="@+id/drawer_edit_profile_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_edit" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/hire_delivery" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:id="@+id/drawer_payment_method_bth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/payments_methods" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/favorites" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:id="@+id/drawer_my_deliveries_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/my_deliveries" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/users_manual" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/frequent_question" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/about_entrego" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/text_contact" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/work_for_us" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/drawer_content_padding"
            android:paddingRight="@dimen/drawer_content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/term_conditions" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_small_next" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
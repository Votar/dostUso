<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBlack"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    android:id="@+id/accept_delivery_root_rl"
    android:paddingTop="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="281dp"
            android:layout_height="281dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_accept_creation_price_holder">

            <TextView
                android:id="@+id/accept_delivery_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="16pt"
                tool:text="$12.50" />

            <TextView
                android:id="@+id/accept_delivery_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accept_delivery_price"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"
                tool:text="Express" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/accept_delivery_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@color/colorAccent"
                android:padding="@dimen/padding_small"
                android:text="@string/itbms_not_included"
                android:textColor="@color/colorBlack" />
        </RelativeLayout>

        <Button
            android:id="@+id/accept_delivery_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:text="@string/text_accept"
            android:theme="@style/BlueButton" />
    </RelativeLayout>
</RelativeLayout>
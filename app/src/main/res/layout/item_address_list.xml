<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <View
            android:id="@+id/status_address_top_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/status_address_pin"
            android:layout_centerInParent="true"
            android:background="@color/secondary_text" />

        <ImageView
            android:id="@+id/status_address_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/blue_dot" />

        <View
            android:id="@+id/status_address_bottom_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/status_address_pin"
            android:layout_centerInParent="true"
            android:background="@color/secondary_text" />
    </RelativeLayout>

    <TextView
        android:id="@+id/status_address_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingLeft="@dimen/default_screen_padding" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.entrego.entregouser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".EntregoUserApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:allowBackup="false">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.intro.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTransparent" />
        <activity
            android:name=".ui.registration.SuccessRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.auth.AuthActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.registration.RegistrationActivity"
            android:parentActivityName=".ui.intro.IntroActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.intro.IntroActivity" />
        </activity>
        <activity
            android:name=".ui.auth.restore.RestorePasswordActivity"
            android:parentActivityName=".ui.auth.AuthActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.auth.AuthActivity" />
        </activity>
        <activity
            android:name=".ui.auth.restore.SuccessRestoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.delivery.create.RootActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.profile.edit.EditProfileActivity"
            android:parentActivityName=".ui.delivery.create.RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.delivery.create.RootActivity" />
        </activity>
        <activity
            android:name=".ui.delivery.escort.root.EscortActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".ui.delivery.create.RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.delivery.create.RootActivity" />
        </activity>
        <activity
            android:name=".ui.faq.FaqListActivity"
            android:parentActivityName=".ui.delivery.create.RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.delivery.create.RootActivity" />
        </activity>
        <activity
            android:name=".ui.faq.FaqDetailActivity"
            android:parentActivityName=".ui.faq.FaqListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.faq.FaqListActivity" />
        </activity>
        <activity
            android:name=".ui.delivery.escort.cancel.CancelDeliveryActivity"
            android:parentActivityName=".ui.delivery.escort.root.EscortActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.entrego.entregouser.ui.delivery.escort.root.EscortActivity" />
        </activity>
        <activity
            android:name=".ui.delivery.escort.cancel.SuccessCancelActivity"
            android:noHistory="true"
            android:parentActivityName=".ui.delivery.create.RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.delivery.create.RootActivity" />
        </activity>
        <activity
            android:name=".ui.delivery.escort.chat.ChatMessengerActivity"
            android:parentActivityName=".ui.delivery.escort.root.EscortActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.delivery.escort.root.EscortActivity" />
        </activity>
        <activity
            android:name=".ui.delivery.finish.FinishDeliveryActivity"
            android:parentActivityName=".ui.delivery.create.RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.delivery.create.RootActivity" />
        </activity>
        <activity android:name=".ui.delivery.escort.status.StatusDeliveryActivity" />
        <activity
            android:name=".ui.profile.payment.PaymentMethodActivity"
            android:parentActivityName=".ui.delivery.create.RootActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.delivery.create.RootActivity" />
        </activity>
        <activity android:name=".ui.profile.payment.card.AddCardActivity"
            android:parentActivityName=".ui.profile.payment.PaymentMethodActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.profile.payment.PaymentMethodActivity" />
        </activity>
        <activity android:name=".ui.profile.payment.wallet.AddMoneyToWalletActivity">

        </activity>
    </application>

</manifest>